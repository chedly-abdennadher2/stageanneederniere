    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th> option id</th>
                <th> option nom</th>
                <th> tag.id</th>
                <th> tag.name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
