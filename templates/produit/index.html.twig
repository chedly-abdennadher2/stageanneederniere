{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}

    <h1>Produit index</h1>
    <a href="{{ path('search_produit') }}">search</a>

    <table class="table">
        <tbody>
        {% for produit in produits %}

            <tr>
                <th>IdProduit </th>
                <th>Type</th>
            </tr>
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.type }}</td>
            </tr>
            {% if produit.options  %}

            {% for option in produit.options %}
                <tr>
                    <th> option id</th>
                    <th> option nom</th>
                </tr>
                <tr>

                <td>{{ option.id }}</td>
                <td>{{ option.name }}</td>
                </tr>

            {% endfor %}

           {%endif %}
            {% if produit.tags %}
                {% for tag in produit.tags %}
                    <tr>
                        <th> tag.id</th>
                        <th> tag.name</th>
                    </tr>
                    <tr>

                    <td>  {{ tag.id }}    </td>
                <td>  {{ tag.name }}    </td>
                    </tr>

                {% endfor %}
            {% endif %}
            <tr>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">show</a> </td>
              <td>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a> </td>

            </tr>

        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
